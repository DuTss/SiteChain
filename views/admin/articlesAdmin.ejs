<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="section">
  <div class="columns">
    <aside class="column is-2">
      <p class="menu-label">Administration</p>
      <ul class="menu-list">
        <li><a href="/admin">Liste des articles</a></li>
        <li><a href="/admin/sourcesAdmin">Liste des auteurs</a></li>
      </ul>
    </aside>

    <div class="container containerAdmin">
      <h1>Liste des <%= total %> articles</h1>
      <div class="columns">
        <% articles.forEach(function(article) {%>
        <div class="column">
          <div class="card">
            <div class="card-image">
              <h2 class="card-title"><%=article.titre%></h2>
              <figure class="image"><img src="<%=article.image%>"></figure>
            </div>
            <div class="card-content">
              <p class="card-text"><%=article.description%></p>
              <p class="source"><strong>Ecrit par: </strong><a href="/sources/<%=article.articleId%>"><%=article.nomSource%></a></p>
            </div>
            <div class="buttons">
              <a href="/admin/editer-article/<%=article.articleId%>"><button class="button is-warning">Modifier</button></a>
              <form action="/admin/supprimer-article/<%=article.articleId%>?_method=DELETE" method="POST">
                <button class="button is-danger">Supprimer</button>
              </form>
            </div>            
          </div>
        </div>
        <%});%>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') %>