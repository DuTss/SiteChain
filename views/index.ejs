    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <h1>Les articles pour comprendre</h1>
    <div class="columns">      
      <% articles.forEach(function(article) {%>
      <div class="column">
        <div class="card">
          <div class="card-image">
            <h2 class="card-title"><%=article.titre%></h2>
            <figure class="image is-4by3">
              <img src="<%=article.image%>" alt="Placeholder image">
            </figure>
          </div>
          <div class="card-content">
            <p class="card-text"><%=article.description%></p>
            <a href="article/<%= article.articleId %>" class="btn btn-primary">Lire la suite..</a>
            <p class="source"><strong>Ecrit par: </strong><a href="/sources/<%=article.sourceId%>"><%=article.nomSource%></a></p>
          </div>
        </div>
      </div>
      <%});%>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs') %>